<!-- 📅 Mese -->
<section id="sectiunea-mese" class="section-content">
  <h2>📅 Mese</h2>

  <div class="masa-card">
    <h3>Masa 1</h3>
    <p>Status: <span class="status-masa" id="status-masa-1">Ocupată</span></p>
    <div class="status-options">
      <label><input type="radio" name="status_masa_1" value="ocupata" onchange="updateStatus(1)"> Ocupată</label>
      <label><input type="radio" name="status_masa_1" value="libera" onchange="updateStatus(1)"> Liberă</label>
      <label><input type="radio" name="status_masa_1" value="rezervata" onchange="showReservationForm(1)"> Rezervată</label>
    </div>

    <div id="reservation-list-1" class="reservation-list"></div>

    <button type="button" id="add-reservation-1" onclick="addReservation(1)">+</button>
  </div>

  <div class="masa-card">
    <h3>Masa 2</h3>
    <p>Status: <span class="status-masa" id="status-masa-2">Liberă</span></p>
    <div class="status-options">
      <label><input type="radio" name="status_masa_2" value="ocupata" onchange="updateStatus(2)"> Ocupată</label>
      <label><input type="radio" name="status_masa_2" value="libera" onchange="updateStatus(2)"> Liberă</label>
      <label><input type="radio" name="status_masa_2" value="rezervata" onchange="showReservationForm(2)"> Rezervată</label>
    </div>

    <div id="reservation-list-2" class="reservation-list"></div>

    <button type="button" id="add-reservation-2" onclick="addReservation(2)">+</button>
  </div>

  <div class="masa-card">
    <h3>Masa 3</h3>
    <p>Status: <span class="status-masa" id="status-masa-3">Rezervată</span></p>
    <div class="status-options">
      <label><input type="radio" name="status_masa_3" value="ocupata" onchange="updateStatus(3)"> Ocupată</label>
      <label><input type="radio" name="status_masa_3" value="libera" onchange="updateStatus(3)"> Liberă</label>
      <label><input type="radio" name="status_masa_3" value="rezervata" onchange="showReservationForm(3)"> Rezervată</label>
    </div>

    <div id="reservation-list-3" class="reservation-list"></div>

    <button type="button" id="add-reservation-3" onclick="addReservation(3)">+</button>
  </div>
</section>

<script>
  // Functie pentru actualizarea textului statusului
  function updateStatus(masaId) {
    const statusMasa = document.querySelector(`#status-masa-${masaId}`);
    const selectedStatus = document.querySelector(`input[name="status_masa_${masaId}"]:checked`).value;

    switch (selectedStatus) {
      case 'ocupata':
        statusMasa.textContent = "Ocupată";
        break;
      case 'libera':
        statusMasa.textContent = "Liberă";
        break;
      case 'rezervata':
        statusMasa.textContent = "Rezervată";
        break;
    }
  }

  // Functie pentru a arata formularul de rezervare
  function showReservationForm(masaId) {
    document.querySelector(`#reservation-list-${masaId}`).style.display = 'block';
  }

  // Functie pentru a adauga o noua rezervare
  function addReservation(masaId) {
    const reservationList = document.querySelector(`#reservation-list-${masaId}`);
    const newReservation = document.createElement('div');
    newReservation.classList.add('reservation-item');
    
    newReservation.innerHTML = `
      <label for="reservation-time-${masaId}-${Date.now()}">Ora rezervării:</label>
      <input type="time" id="reservation-time-${masaId}-${Date.now()}" name="reservation-time-${masaId}-${Date.now()}">
    `;
    reservationList.appendChild(newReservation);
  }
</script>


