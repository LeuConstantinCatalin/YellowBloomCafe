<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Cafeteria</title>
    <%= stylesheet_link_tag 'styles', media: 'all', 'data-turbo-track': 'reload' %>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="container">
      <div class="navbar-top">
        <div class="navbar-logo">
          <%= image_tag 'YF-PNG-resize5.png', alt: 'Logo', class: 'logo-icon' %>
          <a href="<%= root_path %>">YellowBloom Café</a>
        </div>
        <button class="hamburger" onclick="toggleNavbar()">☰</button>
      </div>
      <div class="navbar-links">
        <a href="<%= angajat_path %>" class="<%= 'active' if current_page?(angajat_path) %>">tmpAngajat</a>
        <a href="<%= root_path %>" class="<%= 'active' if current_page?(root_path) %>">Acasa</a>
        <a href="<%= menu_path %>" class="<%= 'active' if current_page?(menu_path) %>">Meniu</a>
        <a href="<%= gallery_path %>" class="<%= 'active' if current_page?(gallery_path) %>">Galerie</a>
        <a href="<%= account_path %>" class="<%= 'active' if current_page?(account_path) %>">Cont</a>
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="page-layout">
    <% if current_page?(angajat_path) %>
      <%= render 'layouts/employee_sidebar' %>
 <!-- render partial -->
    <% else %>
      <aside class="sidebar">
        <h2>Contact</h2>
        <div class="sidebar-info">
          <p><strong>Telefon:</strong> +40 712 345 678</p>
          <p><strong>Email:</strong> contact@yellowbloomcafe.com</p>
          <p><strong>Adresa:</strong> Strada Florilor 12, Cluj-Napoca</p>
          <p> </p>
          <p><strong>Program:</strong></p>
          <p>Luni - Vineri: 10:00 - 22:00</p>
          <p>Sambata - Duminica: 12:00 - 23:00</p>  
        </div>
        <div class="map-container">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2961.047539916206!2d26.08383387634127!3d44.41818667107607!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40b1ff0b54881f97%3A0xae84d2f47f65a3a7!2sMilitary%20Technical%20Academy%20Ferdinand%20I!5e1!3m2!1spt-PT!2spt!4v1744130688669!5m2!1spt-PT!2spt"
            width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </aside>
    <% end %>

    <main class="content">
      <%= yield %>
    </main>
  </div>

  <script>
    function toggleNavbar() {
      const links = document.querySelector('.navbar-links');
      const hamburger = document.querySelector('.hamburger');
      links.classList.toggle('show-links');
      hamburger.classList.toggle('moved-down');
    }
    </script>
  </body>
</html>
